<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="200.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane style="-fx-background-color: #1d1d1d; -fx-padding: 10; -fx-background-radius: 10" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefWidth="342.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label" text="ID:" textFill="#FFD700" />
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" textFill="#FFD700" />
      </HBox>
      <FlowPane fx:id="tags" style="-fx-background-color: #1a1a1a; -fx-padding: 5; -fx-background-radius: 5;">
      </FlowPane>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" textFill="#FFD700" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" textFill="#FFD700" />
      <Label fx:id="appointment" styleClass="cell_small_label" text="\$appointment" textFill="#FFD700" />
      <Label fx:id="property" styleClass="cell_small_label" text="\$property" textFill="#FFD700" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
